<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="top"
              android:id="@+id/CharPicInfo"
              android:gravity="center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CharPic"
        android:layout_gravity="start"
        android:adjustViewBounds="true"
        android:layout_weight="1"
        android:contentDescription="@string/char_pic"
        android:maxHeight="600dp"
        android:scaleType="fitXY"/>

    <view android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          class="course.danon.ggxrdframedata.view.NestedListView"
          android:id="@+id/CharInfo"
          android:layout_gravity="end"
          android:dividerHeight="0dp"
          android:divider="@color/invisible"
          android:listSelector="@color/invisible"
          android:smoothScrollbar="false"
          android:layout_weight="1"
          android:scrollbars="none"/>
    <!--ListView
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:id="@+id/CharInfo"
        android:layout_gravity="end"
        android:dividerHeight="0dp"
        android:divider="@color/invisible"
        android:listSelector="@color/invisible"
        android:smoothScrollbar="false"
        android:layout_weight="1"
        android:scrollbars="none"/-->

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:tools="http://schemas.android.com/tools"
                                        android:id="@+id/drawer_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

    <!-- The main content view -->

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_table_horizontal_margin"
            android:paddingRight="@dimen/activity_table_horizontal_margin"
            android:paddingTop="@dimen/activity_table_vertical_margin"
            android:paddingBottom="@dimen/activity_table_vertical_margin"
            tools:context="course.danon.ggxrdframedata.activity.CharacterFrameDataActivity">
            <TextView
                android:text="@string/hello_world"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/CharNameLabel"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                />
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/CharNameLabel"
                android:id="@+id/TitleRow"
                android:background="@color/black">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/input"
                    android:id="@+id/Input"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_margin="1dip"
                    android:background="@color/light_row_color"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/damage"
                    android:id="@+id/Damage"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_margin="1dip"
                    android:background="@color/light_row_color"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/tension"
                    android:id="@+id/Tension"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_margin="1dip"
                    android:background="@color/light_row_color"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/risc"
                    android:id="@+id/RISC"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_margin="1dip"
                    android:background="@color/light_row_color"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/prorate"
                    android:id="@+id/Prorate"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_margin="1dip"
                    android:background="@color/light_row_color"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/attacklv"
                    android:id="@+id/Attack"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_margin="1dip"
                    android:background="@color/light_row_color"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/guard"
                    android:id="@+id/Guard"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_margin="1dip"
                    android:background="@color/light_row_color"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/cancel"
                    android:id="@+id/Cancel"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_margin="1dip"
                    android:background="@color/light_row_color"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/rc"
                    android:id="@+id/RC"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_margin="1dip"
                    android:background="@color/light_row_color"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/startup"
                    android:id="@+id/Startup"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_margin="1dip"
                    android:background="@color/light_row_color"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/active"
                    android:id="@+id/Active"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_margin="1dip"
                    android:background="@color/light_row_color"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/recovery"
                    android:id="@+id/Recovery"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_margin="1dip"
                    android:background="@color/light_row_color"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/adv"
                    android:id="@+id/Adv"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_margin="1dip"
                    android:background="@color/light_row_color"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/inv"
                    android:id="@+id/Inv"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_margin="1dip"
                    android:background="@color/light_row_color"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:gravity="center_horizontal"/>
            </TableRow>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="false"
                android:fillViewport="false"
                android:layout_centerHorizontal="true" android:layout_alignParentTop="false"
                android:layout_alignParentEnd="false" android:layout_below="@+id/TitleRow">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" android:id="@+id/FDFullContainer">
                    </FrameLayout>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </FrameLayout>
    <!-- The navigation drawer -->

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/black"
        android:choiceMode="singleChoice"
        android:divider="@color/invisible"
        android:dividerHeight="0dp" />

</android.support.v4.widget.DrawerLayout>